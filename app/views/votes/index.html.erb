<% if current_user == @ranked.first.user %>
  <h1> ON TOP OF THE WORLD, BABY </h1>
<% else %>
  <h1> Leaderboard </h1>
<% end %>

<% @ranked.each do |p| %>
  <p>
  <strong><%= p.proclamation %></strong> from <%= p.user.username %> <%= p.votes_for %> votes.
  <%= link_to 'Show', p %>
  </p>
<% end %>

