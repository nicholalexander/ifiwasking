<p id="notice"><%= notice %></p>

<p>
  <strong>Proclamation:</strong>
  <%= @proclamation.proclamation %>
  <strong>Votes:</strong>
  <%= @proclamation.votes_for %>
</p>

<% if current_user = @proclamation.user %>
  <%binding.pry%>
  <%= link_to 'Edit', edit_proclamation_path(@proclamation) %>
<% end %>

<%= link_to 'Back', proclamations_path %> |
<%= link_to('vote for this proclamtion!', vote_up_proclamation_path(@proclamation), :method => :post) %>


